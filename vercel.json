{
  "build": {
    "env": {
      "HUGO_VERSION": "0.140.0",
      "HUGO_ENV": "production",
      "HUGO_EXTENDED": "true"
    }
  },
  "buildCommand": "python3 -m pip install -r requirements.txt && python3 vercel_setup.py && python3 notion_hugo_app.py && hugo --gc --minify",
  "outputDirectory": "public",
  "framework": "hugo",
  "functions": {
    "pages/api/**/*.py": {
      "runtime": "python3.9"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}